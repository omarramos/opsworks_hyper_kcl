check process <%= "#{@application}_kcl" %> with pidfile <%= "#{@deploy[:deploy_to]}/shared/pids/#{@application}_kcl.pid" %>
start program = "/bin/bash -c 'RAILS_ENV=<%= @deploy[:rails_env] %> <%= @deploy[:deploy_to] %>/shared/scripts/kcl.sh start'" with timeout 90 seconds
stop  program = "/bin/bash -c 'RAILS_ENV=<%= @deploy[:rails_env] %> <%= @deploy[:deploy_to] %>/shared/scripts/kcl.sh stop'" with timeout 90 seconds
